<%-include("partials/headerVacation");-%>

<div class="vacation-success-message">
    <h5><%=vacMsg%></h5>
</div>

<div class="vacation-success-info">
    <div class="vacation-success-name">
        <h6>Name:</h6>
        <p><%= vacSuccName %></p>
    </div>
    <div class="vacation-success-starting-date">
        <h6>Starting date: </h6>
        <p><%= vacSuccStartingMonth %>/<%= vacSuccStartingDay %>/<%= vacSuccStartingYear %></p>
    </div>
    <div class="vacation-success-ending-date">
        <h6>Ending date: </h6>
        <p><%= vacSuccEndingMonth %>/<%= vacSuccEndingDay %>/<%= vacSuccEndingYear %></p>
    </div>
</div>


<div class="vacation-success-btns">
    <form action="/vacation">
        <button type="submit" class="vacation-success-create-btn">Add another</button>
    </form>
    <br>
    <button type="button" class="vacation-success-close-btn"
        onclick="window.open('', '_self', ''); window.close();">Close</button>
</div>

<%-include("partials/footer");-%>